{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
<!-- N A V B A R -->
<section id="navbar">
    <nav class="navbar navbar-expand-md navbar-light bg-light">
        <a class="navbar-brand" href="{{ path('app_home') }}">
            <img src="/assets/image/logo-web.png" alt="Logo" class="img-logo">
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav">
                <li class="nav-item mx-auto">
                    <a class="nav-link" href="{{ path('app_home') }}">ACCUEIL<span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item active mx-auto">
                    <a class="nav-link" href="{{ path('app_services') }}">SERVICES</a>
                </li>
                <li class="nav-item mx-auto">
                    <a class="nav-link" href="{{ path('app_contact') }}">CONTACT</a>
                </li>
            </ul>
        </div>
    </nav>
</section>
<!-- N A V B A R -->

<!-- R U L E -->
<section id="rule">
    <div class="header-container">
        <picture>
            <source media="(min-width: 768px)" srcset="/assets/image/picture-rule.jpg">
            <img class="img-rule" src="/assets/image/picture-rule-phone.jpg" alt="Picture rule">
        </picture>
    </div>
</section>
<!-- R U L E -->

<!-- A R T I C L E -->
<section id="article-right">
    <div class="container-fluid row col-md-10 mx-auto">
        <div class="image-container col-md-6 order-2 order-md-1">
           <img src="{{ asset('uploads/photos/' ~ article2.photo) }}" alt="Photo description" class="img-fluid">
            <img src="/assets/image/icone-3.png" alt="Photo description" class="icon-article">
        </div>
        <div class="containt-article row col-md-6 order-md-3 order-1">
                 <h1 class="t-article">{{ article2.titre }}</h1>
            <p class="p-article">{{ article2.texte }}</p>
        </div>
    </div>
</section>
<!-- A R T I C L E -->

<!-- S E R V I C E -->
<section id="service">
    <div class="container-fluid row col-md-10 mx-auto mt-5 mt-md-5">
        <div class="title mt-0 mt-md-5">
            <h1 class="t-article">LES DIFFERENTS SERVICES :</h1>
        </div>
        <img src="/assets/image/icone-3.png" alt="Photo description" class="icon-article">

        {% for service in services %}
            <div class="cards col-md-4 mt-md-5 mt-5">
                <img src="/assets/image/{{ service.photo }}" alt="Photo description" class="img-fluid img-service">
                <h1 class="t-service col-md-10 mt-3 mt-md-3">{{ service.titre }}</h1>
                <p class="p-service col-10 col-md-10 mt-2 mt-md-2">{{ service.description }}</p>
            </div>
        {% endfor %}
    </div>
</section>
<!-- S E R V I C E -->

<!-- C O N T A C T -->
<section id="contact">
    <div class="mt-5 mt-md-0">
        <picture>
            <source media="(min-width: 768px)" srcset="/assets/image/picture-rule.jpg">
            <img class="img-rule" src="/assets/image/picture-rule-phone.jpg" alt="Picture rule">
        </picture>
        <div class="container-fluid row col-md-10 mx-auto">
            <div class="contact col-md-4 mt-md-5">
                <picture class="phone-rule">
                    <source media="(min-width: 768px)" srcset="">
                    <img src="/assets/image/picture-rule-phone-2.jpg" alt="Phone Rule" class="img-fluid">
                </picture>
                <div class="icon-contact col-12">
                    <i class="fa-solid fa-phone"></i>
                </div>
                <h1 class="t-service col-md-10 mt-3 mt-md-3">TELEPHONE :</h1>
                <p class="p-service col-10 col-md-10 mt-2 mt-md-2">Pour nous joindre par téléphone, nous sommes disponibles du lundi au vendredi, de 9h à 18h, ainsi que le samedi matin.</p>
                <a href="tel:+33785856598" class="phone-link">{{ contact.telephone }}</a>
            </div>
            <div class="contact col-md-4 mt-md-5">
                <picture class="phone-rule">
                    <source media="(min-width: 768px)" srcset="">
                    <img src="/assets/image/picture-rule-phone-1.jpg" alt="Phone Rule" class="img-fluid">
                </picture>
                <div class="icon-contact col-12">
                    <i class="fa-solid fa-envelope"></i>
                </div>
                <h1 class="t-service col-md-10 mt-3 mt-md-3">E-MAIL :</h1>
                <p class="p-service col-10 col-md-10 mt-2 mt-md-2">Vous pouvez nous contacter par email, et une réponse vous sera donnée dans les plus brefs délais. Votre satisfaction est notre priorité.</p>
                    <a href="mailto:{{ contact.email }}" class="email-link">{{ contact.email }}</a>
            </div>
            <div class="contact col-md-4 mt-md-5">
                <picture class="phone-rule">
                    <source media="(min-width: 768px)" srcset="">
                    <img src="/assets/image/picture-rule-phone-3.jpg" alt="Phone Rule" class="img-fluid">
                </picture>
                <div class="icon-contact col-12">
                    <i class="fa-brands fa-facebook-f"></i>
                </div>
                <h1 class="t-service col-md-10 mt-3 mt-md-3">FACEBOOK :</h1>
                <p class="p-service col-10 col-md-10 mt-2 mt-md-2">Retrouvez toutes nos actualités, nouveautés et informations sur notre page Facebook, et restez informé de nos projets en cours.</p>
                <a href="https://www.facebook.com/profile.php?id=61551917806933&locale=fr_FR" class="website-link" target="_blank">ACCEDER AU SITE</a>
            </div>
        </div>
    </div>
</section>
<!-- C O N T A C T -->

<!-- F O O T E R -->
<section id="footer">
    <div>
            <a href="{{ path('app_mentions_legales') }}" class="footer-link">MENTIONS LÉGALES</a>

        <img src="/assets/image/logo-web.png" alt="Logo" class="img-logo">
    </div>
</section>
<!-- F O O T E R -->
{% endblock %}
