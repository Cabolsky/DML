{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}

<!-- N A V B A R -->
<section id="navbar">
    <nav class="navbar navbar-expand-md navbar-light bg-light">
        <a class="navbar-brand" href="{{ path('app_home') }}">
            <img src="/assets/image/logo-web.png" alt="Logo" class="img-logo">
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav">
                <li class="nav-item mx-auto">
                    <a class="nav-link" href="{{ path('app_home') }}">HOME <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item mx-auto">
                    <a class="nav-link" href="{{ path('app_services') }}">SERVICES</a>
                </li>
                <li class="nav-item active mx-auto">
                    <a class="nav-link" href="{{ path('app_contact') }}">CONTACT</a>
                </li>
            </ul>
        </div>
    </nav>
</section>
<!-- N A V B A R -->

<!-- C O N T A C T -->
{# templates/contact/index.html.twig #}

{# templates/contact/index.html.twig #}

<section id="contact-header">
    <div class="mt-md-0">
        <picture>
            <source media="(min-width: 768px)" srcset="/assets/image/picture-rule.jpg">
            <img class="img-rule" src="/assets/image/picture-rule-phone.jpg" alt="Picture rule">
        </picture>
        <div class="container-fluid row col-md-10 mx-auto">
            <div class="contact col-md-4 mt-md-5">
                <picture class="phone-rule">
                    <source media="(min-width: 768px)" srcset="">
                    <img src="/assets/image/picture-rule-phone-2.jpg" alt="Phone Rule" class="img-fluid">
                </picture>
                <div class="icon-contact col-12">
                    <i class="fa-solid fa-phone"></i>
                </div>
                <h1 class="t-service col-md-10 mt-3 mt-md-3">TELEPHONE :</h1>
                <p class="p-service col-10 col-md-10 mt-2 mt-md-2">Pour nous joindre par téléphone, nous sommes disponibles du lundi au vendredi, de 9h à 18h, ainsi que le samedi matin.</p>

                    <a href="tel:{{ contact.telephone }}" class="phone-link">{{ contact.telephone }}</a>

                <img src="/assets/image/picture-contact-1.jpg" alt="Contact Image" class="contact-image">
            </div>
            <div class="contact col-md-4 mt-md-5">
                <picture class="phone-rule">
                    <source media="(min-width: 768px)" srcset=""/>
                    <img src="/assets/image/picture-rule-phone-1.jpg" alt="Phone Rule" class="img-fluid">
                </picture>
                <div class="icon-contact col-12">
                    <i class="fa-solid fa-envelope"></i>
                </div>
                <h1 class="t-service col-md-10 mt-3 mt-md-3">E-MAIL :</h1>
                <p class="p-service col-10 col-md-10 mt-2 mt-md-2">Pour nous joindre par email, nous sommes disponibles du lundi au vendredi, de 9h à 18h, ainsi que le samedi matin.</p>

                    <a href="mailto:{{ contact.email }}" class="email-link">{{ contact.email }}</a>

                <img src="/assets/image/picture-contact-2.jpg" alt="Contact Image" class="contact-image">
            </div>
            <div class="contact col-md-4 mt-md-5">
                <picture class="phone-rule">
                    <source media="(min-width: 768px)" srcset="">
                    <img src="/assets/image/picture-rule-phone-3.jpg" alt="Phone Rule" class="img-fluid">
                </picture>
                <div class="icon-contact col-12">
                    <i class="fa-brands fa-facebook-f"></i>
                </div>
                <h1 class="t-service col-md-10 mt-3 mt-md-3">FACEBOOK :</h1>
                <p class="p-service col-10 col-md-10 mt-2 mt-md-2">Pour nous joindre sur Facebook, nous sommes disponibles du lundi au vendredi, de 9h à 18h, ainsi que le samedi matin.</p>
                <a href="https://www.facebook.com/profile.php?id=61551917806933&locale=fr_FR" class="website-link" target="_blank">ACCEDER AU SITE</a>
                <img src="/assets/image/picture-contact-3.jpg" alt="Contact Image" class="contact-image">
            </div>
        </div>
    </div>
</section>


<!-- C O N T A C T -->

<!-- F O O T E R -->
<section id="footer" class="mt-md-0 mt-0">
    <div>
        <img src="/assets/image/logo-web.png" alt="Logo" class="img-logo">
    </div>
</section>
<!-- F O O T E R -->

{% endblock %}
