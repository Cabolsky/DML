{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}

<!-- N A V B A R -->
<section id="navbar">
    <nav class="navbar navbar-expand-md navbar-light bg-light">
        <a class="navbar-brand" href="{{ path('app_home') }}">
            <img src="/assets/image/logo-web.png" alt="Logo" class="img-logo">
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav">
                <li class="nav-item active mx-auto">
                    <a class="nav-link" href="{{ path('app_home') }}">HOME <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item mx-auto">
                    <a class="nav-link" href="{{ path('app_services') }}">SERVICES</a>
                </li>
                <li class="nav-item mx-auto">
                    <a class="nav-link" href="{{ path('app_contact') }}">CONTACT</a>
                </li>
            </ul>
        </div>
    </nav>
</section>
<!-- N A V B A R -->

<!-- R U L E -->
<section id="rule">
    <div class="header-container">
        <picture>
            <source media="(min-width: 768px)" srcset="/assets/image/picture-rule.jpg">
            <img class="img-rule" src="/assets/image/picture-rule-phone.jpg" alt="Picture rule">
        </picture>
    </div>
</section>
<!-- R U L E -->

<!-- A R T I C L E -->
<section id="article-left">
    <div class="container-fluid row col-md-10 mx-auto">
        <div class="image-container col-md-6 order-2 order-md-2">
            <img src="{{ asset('assets/image/' ~ article1.photo) }}" alt="Photo description" class="img-fluid">
            <img src="/assets/image/icone-1.png" alt="Photo description" class="icon-article">
        </div>
        <div class="containt-article row col-md-6 order-md-1 order-1">
            <h1 class="t-article">{{ article1.titre }}</h1>
            <p class="p-article">{{ article1.texte }}</p>
        </div>
    </div>
</section>
<!-- A R T I C L E -->

<!-- A R T I C L E -->
<section id="article-right">
    <div class="container-fluid row col-md-10 mx-auto">
        <div class="image-container col-md-6 order-2 order-md-1">
            <img src="{{ asset('assets/image/' ~ article2.photo) }}" alt="Photo description" class="img-fluid">
            <img src="/assets/image/icone-3.png" alt="Photo description" class="icon-article">
        </div>
        <div class="containt-article row col-md-6 order-md-3 order-1">
                 <h1 class="t-article">{{ article2.titre }}</h1>
            <p class="p-article">{{ article2.texte }}</p>
        </div>
    </div>
</section>
<!-- A R T I C L E -->

<!-- A R T I C L E -->
<section id="article-gallery">
    <div class="container-fluid row col-md-10 mx-auto">
        <div class="image-container col-md-6 order-2 order-md-2">
            <img src="{{ asset('assets/image/' ~ article3.photo) }}" alt="Photo description" class="img-fluid d-none d-md-flex">
            <img src="/assets/image/icone-2.png" alt="Photo description" class="icon-article">
        </div>
        <div class="containt-article row col-md-6 order-md-1 order-1">
            <h1 class="t-article">{{ article3.titre }}</h1>
            <p class="p-article">{{ article3.texte }}</p>        </div>
    </div>
</section>
<!-- A R T I C L E -->

<!-- S L I D E R -->
<section id="photo-gallery" class="container mt-1">
  <div class="row mx-auto">
    {% for photo in photos %}
      <div class="col-11 col-md-4">
        <div class="image-container">
          <a href="#imageModal{{ loop.index }}" data-bs-toggle="modal">
            <img src="/assets/image/{{ photo.photo }}" alt="{{ photo.accessibilite }}">
          </a>
        </div>
      </div>
    {% endfor %}
  </div>
</section>

{% for photo in photos %}
<div class="modal fade" id="imageModal{{ loop.index }}" tabindex="-1" aria-labelledby="imageModal{{ loop.index }}Label" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-body text-center">
        <img src="/assets/image/{{ photo.photo }}" alt="{{ photo.accessibilite }}" class="img-fluid">
      </div>
    </div>
  </div>
</div>
{% endfor %}

<!-- S L I D E R -->


<section id="comment-header" class="section-hidden">
    <div id="comment-slider" class="carousel slide d-md-none" data-bs-ride="carousel">
        <div class="carousel-inner my-4 mt-5">
            {% for commentaire in commentaires %}
                <div class="carousel-item {% if loop.first %}active{% endif %}">
                    <div class="col-12">
                        <img src="{{ asset('assets/image/' ~ commentaire.icone) }}" alt="Icône {{ commentaire.titre }}" class="icon-img">
                        <h1 class="t-service col-md-10 mt-4">{{ commentaire.titre }}</h1>
                        <p class="p-service col-10 col-md-10 mt-4">{{ commentaire.texte }}</p>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
    <div class="row col-11 mx-auto d-none d-md-flex mt-0 mt-md-5">
        {% for commentaire in commentaires %}
            <div class="col-12 col-md-4">
                <img src="{{ asset('assets/image/' ~ commentaire.icone) }}" alt="Icône {{ commentaire.titre }}" class="icon-img">
                <h1 class="t-service col-md-10 mt-md-4">{{ commentaire.titre }}</h1>
                <p class="p-service col-10 col-md-10 mt-md-3">{{ commentaire.texte }}</p>
            </div>
        {% endfor %}
    </div>
</section>



<!-- C O N T A C T -->
<section id="contact">
    <div class="mt-5 mt-md-0">
        <picture>
            <source media="(min-width: 768px)" srcset="/assets/image/picture-rule.jpg">
            <img class="img-rule" src="/assets/image/picture-rule-phone.jpg" alt="Picture rule">
        </picture>
        <div class="container-fluid row col-md-10 mx-auto">
            <div class="contact col-md-4 mt-md-5">
                <picture class="phone-rule">
                    <source media="(min-width: 768px)" srcset="">
                    <img src="/assets/image/picture-rule-phone-2.jpg" alt="Phone Rule" class="img-fluid">
                </picture>
                <div class="icon-contact col-12">
                    <i class="fa-solid fa-phone"></i>
                </div>
                <h1 class="t-service col-md-10 mt-3 mt-md-3">TELEPHONE :</h1>
                <p class="p-service col-10 col-md-10 mt-2 mt-md-2">Pour nous joindre par téléphone, nous sommes disponibles du lundi au vendredi, de 9h à 18h, ainsi que le samedi matin.</p>
                <a href="tel:+33785856598" class="phone-link">07 85 85 65 98</a>
            </div>
            <div class="contact col-md-4 mt-md-5">
                <picture class="phone-rule">
                    <source media="(min-width: 768px)" srcset="">
                    <img src="/assets/image/picture-rule-phone-1.jpg" alt="Phone Rule" class="img-fluid">
                </picture>
                <div class="icon-contact col-12">
                    <i class="fa-solid fa-envelope"></i>
                </div>
                <h1 class="t-service col-md-10 mt-3 mt-md-3">E-MAIL :</h1>
                <p class="p-service col-10 col-md-10 mt-2 mt-md-2">Pour nous joindre par téléphone, nous sommes disponibles du lundi au vendredi, de 9h à 18h, ainsi que le samedi matin.</p>
                    <a href="mailto:{{ contact.email }}" class="email-link">{{ contact.email }}</a>
            </div>
            <div class="contact col-md-4 mt-md-5">
                <picture class="phone-rule">
                    <source media="(min-width: 768px)" srcset="">
                    <img src="/assets/image/picture-rule-phone-3.jpg" alt="Phone Rule" class="img-fluid">
                </picture>
                <div class="icon-contact col-12">
                    <i class="fa-brands fa-facebook-f"></i>
                </div>
                <h1 class="t-service col-md-10 mt-3 mt-md-3">FACEBOOK :</h1>
                <p class="p-service col-10 col-md-10 mt-2 mt-md-2">Pour nous joindre par téléphone, nous sommes disponibles du lundi au vendredi, de 9h à 18h, ainsi que le samedi matin.</p>
                <a href="https://www.facebook.com/profile.php?id=61551917806933&locale=fr_FR" class="website-link" target="_blank">ACCEDER AU SITE</a>
            </div>
        </div>
    </div>
</section>
<!-- C O N T A C T -->

<!-- F O O T E R -->
<section id="footer">
    <div>
        <img src="/assets/image/logo-web.png" alt="Logo" class="img-logo">
    </div>
</section>
<!-- F O O T E R -->

{% endblock %}
